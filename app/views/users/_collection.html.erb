<div class="blue-box">
    <div class="white-background text-left">
        <div class="row">
            <div class="col-12 col-md-5">
                <h2> Collection:</h2>
                <ul>
                    <% @user.user_figures.each do |user_figure|%>
                        <li>
                            <h2><%= link_to user_figure.figure.name, figure_path(user_figure.figure)%></h2>
                            <p><%= "#{user_figure.figure.product.category.name}, #{user_figure.figure.product.name}"%>
                            <% if current_user == @user %>
                            <p><%=link_to "Remove", user_figure_path(user_figure), method: "DELETE"%><p>
                            <%end%>
                        </li>
                    <%end%>
                </ul>
            </div>
            <div class="col-12 col-md-7">
                <h2><%= "Commented Figures by #{@user.username}:"%></h2>
                <ul> 
                    <% if @user.commented_figures.length == 0%>
                           <h3 class="alert alert-primary"> None </h3>
                    <%else%>
                        <% @user.commented_figures.uniq.each do |figure| %>
                            <li><h3><%= figure.name%></h3></li>
                        <%end%>   
                    <%end%>  
                </ul>
            </div>
        </div>
    </div>
</div>
