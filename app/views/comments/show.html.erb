<div class="blue-box">
    <div class="white-background text-center m-4">
        <h2>Figure commented:</h2>
        <h2 class="m-4"><%= link_to @comment.figure.name, figure_path(@comment.figure) %></h1>
        <p class="m-2"><%= "Post by: #{@comment.user.username}" %></p>
        <h3><%= @comment.comment %></h3><br>

        <%  if current_user == @comment.user %> 
        <p class="m-2"><%= link_to "Edit Comment", edit_comment_path%>
        <p class="m-2"><%=link_to "Delete Comment", comment_path, method: "DELETE"%><p><br>
        <%end%>

        <p><%= link_to "Back to Figure", figure_path(@comment.figure) %><p>
    </div>
</div>