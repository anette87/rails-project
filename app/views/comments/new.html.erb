<h1>Create A Comment</h1>

<% if @comment.errors.any?%>
    <div id= "error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error")%> Error: </h2>
        <ul>
            <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <%end%>
        </ul>
    </div>
<%end%>

<%= render 'form' %> 

